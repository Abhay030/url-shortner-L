# Backend environment variables

# Option 1: Neon (recommended, free)
# Sign up at https://neon.tech → create a project → copy the connection string
# Example: postgres://user:password@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgres://user:password@host:5432/database

# Option 2: Local Postgres (run pg on localhost:5432)
# DATABASE_URL=postgres://postgres:password@localhost:5432/urlshortener

# Set DB_SSL=true for Neon (or any cloud Postgres)
DB_SSL=true

# App config
PORT=4000
BASE_URL=http://localhost:4000
CORS_ORIGIN=http://localhost:3000
FRONTEND_BUILD_DIR=../my-app/build
APP_VERSION=1.0
